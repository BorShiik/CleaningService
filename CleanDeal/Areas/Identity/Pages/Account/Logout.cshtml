@page
@model LogoutModel
@{
    ViewData["Title"] = "Wylogowanie";
}

<section class="section">
    <div class="container d-flex justify-content-center" style="max-width:600px">
        <div class="card shadow-sm border-0 w-100">
            <div class="card-body text-center py-5">

                <h2 class="fw-bold mb-4">
                    <i class="bi bi-door-open-fill text-success me-2"></i>@ViewData["Title"]
                </h2>

                @if (User.Identity?.IsAuthenticated ?? false)
                {
                    <p class="mb-4">Czy na pewno chcesz się wylogować?</p>
                    <form asp-area="Identity"
                          asp-page="/Account/Logout"
                          asp-route-returnUrl="@Url.Page("/", new { area = "" })"
                          method="post">
                        <button type="submit" class="btn btn-success px-5">
                            <i class="bi bi-box-arrow-right me-1"></i>Wyloguj
                        </button>
                    </form>
                }
                else
                {
                    <p class="mb-4">Zostałeś pomyślnie wylogowany.</p>
                    <a asp-page="/Index" class="btn btn-outline-primary">
                        <i class="bi bi-house-door me-1"></i>Powrót na stronę główną
                    </a>
                }
            </div>
        </div>
    </div>
</section>
