@page
@model CleanDeal.Areas.Identity.Pages.Account.Manage.EarningsModel
@{
    ViewData["Title"] = "Zarobki";
    ViewData["ActivePage"] = ManageNavPages.Earnings;
}

<section class="py-5">
    <div class="container">
        <div class="row g-4 justify-content-center">

            <div class="col-12 col-lg-4">
                <div class="card border-0 shadow-sm summary-card h-100">
                    <div class="card-body d-flex flex-column justify-content-center text-center">
                        <i class="bi bi-credit-card-2-front-fill display-5 mb-3 text-accent"></i>
                        <h4 class="fw-semibold mb-2">Łączne zarobki</h4>
                        <span class="fs-3 fw-bold">@Model.TotalEarnings.ToString("C")</span>
                        <small class="text-muted mt-1">z zakończonych zleceń</small>
                    </div>
                </div>
            </div>

            <div class="col-12 col-lg-8">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-transparent pb-0">
                        <h5 class="mb-0 fw-semibold">Historia zleceń</h5>
                    </div>

                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0 earnings-table">
                                <thead class="table-light text-nowrap">
                                    <tr>
                                        <th class="ps-lg-4">Data</th>
                                        <th class="text-end">Kwota</th>
                                        <th class="text-end">Napiwek</th>
                                        <th class="text-end pe-lg-4">Zarobek</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var o in Model.Orders)
                                    {
                                        <tr>
                                            <td class="ps-lg-4">@o.Date.ToString("dd.MM.yyyy")</td>
                                            <td class="text-end">@o.Amount.ToString("C")</td>
                                            <td class="text-end">@o.Tip.ToString("C")</td>
                                            <td class="text-end pe-lg-4 fw-semibold">@o.Earning.ToString("C")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <div class="card-footer bg-transparent text-end small text-muted">
                        Łącznie pozycji: @Model.Orders.Count
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
