@model IEnumerable<CleanDeal.DTOs.CleaningOrderDTO>

@{
    ViewData["Title"] = "Moje zlecenia";
    bool isAdmin = User.IsInRole("Admin");
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-success">Nowe zamówienie</a>
</p>

<table class="table table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Data</th>
            <th>Usługa</th>
            <th>Status</th>
            <th>Kwota</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var o in Model)
        {
            bool finished = o.Status == "Ukończone";

            <tr>
                <td>@o.Id</td>
                <td>@o.Date:g</td>
                <td>@o.ServiceTypeName</td>
                <td>@o.Status</td>
                <td>@o.OrderTotal.ToString("c")</td>

                <td class="px-4">
                    <div class="btn-group float-end" role="group">
                        <a asp-action="Details"
                           asp-route-id="@o.Id"
                           class="btn btn-outline-primary">
                            Szczegóły
                        </a>

                        @* Edytuj i Zapłać tylko jeśli zlecenie NIE jest ukończone *@
                        @if (!finished)
                        {
                            <a asp-action="Edit"
                               asp-route-id="@o.Id"
                               class="btn btn-outline-primary">
                                Edytuj
                            </a>

                            <a asp-controller="Payments"
                               asp-action="Checkout"
                               asp-route-id="@o.Id"
                               class="btn btn-success">
                                Zapłać
                            </a>
                        }

                        @* Usuń – zawsze dla Admina, a dla klienta dopóki nie ukończone *@
                        @if (isAdmin || !finished)
                        {
                            <form asp-action="Delete"
                                  asp-route-id="@o.Id"
                                  method="post"
                                  onsubmit="return confirm('Usunąć?');"
                                  class="d-inline">
                                <button class="btn btn-danger">Usuń</button>
                            </form>
                        }
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
