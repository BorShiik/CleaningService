@model IEnumerable<CleanDeal.DTOs.ProductDTO>
@{
    ViewData["Title"] = "Produkty";
    bool isAdmin = User.IsInRole("Admin");
    bool isCleaner = User.IsInRole("Cleaner");
}
<h2>@ViewData["Title"]</h2>
@if (isAdmin)
{
    <p>
        <a class="btn btn-success" asp-action="Create">Dodaj produkt</a>
    </p>
}
<table class="table table-hover">
    <thead>
        <tr>
            <th>Nazwa</th>
            <th>Cena</th>
            <th>Dostępne</th>
            @if (!isAdmin)
            {
                <th>Dodaj</th>
            }else 
            { 
                <th></th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Name</td>
                <td>@p.Price</td>
                <td>@p.StockQuantity</td>

                @if (isAdmin)
                {
                    <td>
                        <a asp-action="Edit" asp-route-id="@p.Id" class="btn btn-sm btn-primary">Edytuj</a>
                        <a asp-action="Delete" asp-route-id="@p.Id" class="btn btn-sm btn-danger">Usuń</a>
                    </td>
                }
                @if (isCleaner)
                {
                    <td>
                        <form asp-controller="Cart" asp-action="Add" method="post" class="d-flex">
                            <input type="hidden" name="id" value="@p.Id" />
                            <input type="number" name="qty" value="1" min="1" class="form-control form-control-sm me-1" style="width:80px;" />
                            <button type="submit" class="btn btn-sm btn-success ms-5">Do koszyka</button>
                        </form>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>