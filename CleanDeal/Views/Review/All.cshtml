@model IEnumerable<CleanDeal.DTOs.ReviewDTO>
@{
    ViewData["Title"] = "Opinie klientów";
}
<h2>@ViewData["Title"]</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Zlecenie</th>
            <th>Ocena</th>
            <th>Komentarz</th>
            <th>Data</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>#@r.CleaningOrderId</td>
                <td>@r.Rating / 5</td>
                <td>@r.Comment</td>
                <td>@r.CreatedAt.ToLocalTime().ToString("g")</td>
            </tr>
        }
    </tbody>
</table>
