@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser>   UserManager
@{
    var isAuth = SignInManager.IsSignedIn(User);
    var isAdmin = User.IsInRole("Admin");
    var isCleaner = User.IsInRole("Cleaner");
    var currentUser = UserManager.GetUserAsync(User)
	    .GetAwaiter().GetResult();
    string fullName = currentUser?.FullName ?? User.Identity?.Name;

    Layout = null;
}
<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>@ViewData["Title"] - Cleaning Service</title>

    @*<link rel="stylesheet"
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
        integrity="sha384-kPw5LA7r+0HYViN0oRgu6qbT1wIIdEr8lLZG2PySXzC4Tz0uCuC4faqxzE5jB6F"
        crossorigin="anonymous" />*@
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Review.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                    Cleaning Service
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#menu" aria-controls="menu"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="menu">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Start</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Products" asp-action="Index">Produkty</a>
                        </li>
                        @if (isAuth && !isCleaner)
                        {
                            <li class="nav-item">
                                @if (isAdmin)
                                {
                                    <a class="nav-link" asp-controller="Orders" asp-action="Index">Zlecenia</a>;
                                }
                                else
                                {
                                    <a class="nav-link" asp-controller="Orders" asp-action="Index">Moje zlecenia</a>;
                                }

                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Chat" asp-action="Order" asp-route-id="0">Czat</a>
                            </li>
                        }
                        @if (isCleaner)
                        {
                            <li class="nav-item"><a class="nav-link" asp-controller="CleanerOrders" asp-action="Available">Wolne zlecenia</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="CleanerOrders" asp-action="My">Moje zlecenia</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Chat" asp-action="Order" asp-route-id="0">Czat</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Cart" asp-action="Index">Koszyk</a></li>
                        }

                        @if (isAdmin)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Review" asp-action="All">Opinie</a>
                            </li>
                        }
                    </ul>

                    <ul class="navbar-nav mb-2 mb-lg-0">
                        @if (isAuth)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="userMenu"
                                   role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    @fullName
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userMenu">
                                    <li>
                                        <a class="dropdown-item"
                                           asp-area="Identity"
                                           asp-page="/Account/Manage/Index">Profil</a>
                                    </li>
                                    <li><hr class="dropdown-divider" /></li>
                                    <li>
                                        <form asp-area="Identity" asp-page="/Account/Logout"
                                              method="post" class="px-3">
                                            <button type="submit" class="btn btn-link p-0 link-underline-opacity-0">Wyloguj</button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Logowanie</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">Rejestracja</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="container py-4">
        @await Html.PartialAsync("_Alerts")
        @RenderBody()
    </main>

    <footer class="bg-light text-center py-3 border-top">
        <small>&copy; @DateTime.UtcNow.Year Cleaning Service</small>
    </footer>

    @* <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-u9gV9Z2kDoCXW4kKxR1XTbaIBRu8Vt2h6GwwA0D+ynMjMQt/7OCVh0VkMg7N9w6g"
        crossorigin="anonymous"></script>*@
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
